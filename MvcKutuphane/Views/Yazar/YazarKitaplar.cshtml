@using MvcKutuphane.Models.Entity
@model List<TblKitap>
@{
    ViewBag.Title = "YazarKitaplar";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>@ViewBag.dgr1 @ViewBag.dgr2</h2>

<table class="table table-striped">
    <tr style="background-color: #f8b30e">
        <th>ID</th>
        <th>Yazarın Kitapları</th>
    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.ID</td>
            <td>@x.AD</td>
        </tr>

    }
</table>
<br />
<a href="/Yazar/YazarEkle/" class="btn btn-primary">Yeni Yazar</a>

