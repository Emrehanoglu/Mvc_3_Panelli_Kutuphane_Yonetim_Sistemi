@using MvcKutuphane.Models.Entity
@model List<TblYazar>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>Yazarlar</h2>
<table class="table table-striped">
    <tr style="background-color: #f8b30e">
        <th>ID</th>
        <th>AD</th>
        <th>SOYAD</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>
        <th>Yazarın Kitapları</th>
    </tr>    
    @foreach(var x in Model)
            {
            <tr>
                <td>@x.ID</td>
                <td>@x.AD</td>
                <td>@x.SOYAD</td>
                <td>@Html.ActionLink("Sil","YazarSil",new { p = x.ID}, new { @class = "btn btn-danger", onclick = "return confirm('Silmek İstiyor musunuz?')" })</td>
                <td><a href="/Yazar/YazarGetir/@x.ID" class="btn btn-success">Güncelle</a></td>
                <td><a href="/Yazar/YazarKitaplar/@x.ID" class="btn btn-group" style="background-color:#dec111;color:white">DETAY</a></td>
            </tr>
                
            }
</table>
<br />
<a href="/Yazar/YazarEkle/" class="btn btn-primary">Yeni Yazar</a>

