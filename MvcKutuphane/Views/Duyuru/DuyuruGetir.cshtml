@model MvcKutuphane.Models.Entity.TblDuyurular

@{
    ViewBag.Title = "DuyuruGetir";
    Layout = "~/Views/Shared/Layout.cshtml";
}

@using (Html.BeginForm("DuyuruGuncelle", "Duyuru", FormMethod.Post))
{
    <div style="margin-bottom:15px"></div>
    <div class="form-group">
        <div>
            <label>Duyuru ID</label>
            @Html.TextBoxFor(x => x.ID, new { @class = "form-control" })
            <br />
            <label>Kategori</label>
            @Html.TextBoxFor(x => x.KATEGORI, new { @class = "form-control" })
            <br />
            <label>İçerik</label>
            @Html.TextBoxFor(x => x.ICERİK, new { @class = "form-control" })
            <br />
            <label>Tarih</label>
            @Html.TextBoxFor(x => x.TARIH, new { @class = "form-control", @readonly = "readonly" })
        </div>
        <br />
        <button class="btn btn-info">Duyuru Güncelle</button>
    </div>
}
