@using MvcKutuphane.Models.Entity
@model List<TblHareket>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<div style="margin-bottom:15px"></div>
<label style="margin-bottom:15px">İade Edilen Kitaplar</label>
<table class="table table-bordered">
    <tr>
        <th>Kitap</th>
        <th>Üye</th>
        <th>Personel</th>
        <th>Alış Tarihi</th>
        <th>Gerçekleşen İade</th>
        <th>Detay</th>
    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.TblKitap.AD</td>
            <td>@x.TblUyeler.AD&nbsp; @x.TblUyeler.SOYAD</td>
            <td>@x.TblPersonel.PERSONEL</td>
            <td>@Convert.ToDateTime(x.ALISTARIH).ToString("dd/MM/yyyy")</td>
            <td>@Convert.ToDateTime(x.GERCEKLESENIADE).ToString("dd/MM/yyyy")</td>
            <td><a href="#" class="btn btn-group" style="background-color: #4cff00; color:black">Detay</a></td>
        </tr>
    }
</table>

