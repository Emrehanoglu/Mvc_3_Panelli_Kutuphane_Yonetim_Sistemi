@using MvcKutuphane.Models.Entity
@model List<TblKategori>
@{
    ViewBag.Title = "SilinenKategoriler";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>Silinen Kategoriler</h2>

<table class="table table-bordered" style="margin-bottom:15px">
    <tr>
        <th>Kategori Id</th>
        <th>Kategori Ad</th>
    </tr>
    @foreach (var ktg in Model)
    {
        <tr>
            <td>@ktg.ID</td>
            <td>@ktg.AD</td>
            <td><a href="/Kategori/KategoriDöndür/@ktg.ID" class="btn btn-success">Aktifleştir</a></td>
        </tr>
    }
</table>
<a href="/Kategori/Index/" class="btn btn-danger">Geri Dön</a>


