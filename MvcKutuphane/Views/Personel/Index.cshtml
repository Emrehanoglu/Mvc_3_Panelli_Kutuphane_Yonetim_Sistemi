@using MvcKutuphane.Models.Entity
@model List<TblPersonel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>Personel Sayfası</h2>
<table class="table table-bordered">
    <tr>
        <th>Personel ID</th>
        <th>Personel</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var p in Model)
    {
        <tr>
            <td>@p.ID</td>
            <td>@p.PERSONEL</td>
            <td><a href="/Personel/PersonelSil/@p.ID" class="btn btn-danger">Sil</a></td>
            <td><a href="/Personel/PersonelGetir/@p.ID" class="btn btn-success">Güncelle</a></td>
        </tr>
    }
</table>
<a href="/Personel/PersonelEkle/" class="btn btn-primary">Yeni Personel Girişi</a>

