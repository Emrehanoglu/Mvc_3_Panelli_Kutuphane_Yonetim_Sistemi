@using MvcKutuphane.Models.Entity
@model List<TblHareket>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}
<div style="margin-bottom:15px"></div>
<label style="margin-bottom:15px">Ödünç Verilen Kitaplar</label>
<table class="table table-bordered">
    <tr>
        <th>Kitap</th>
        <th>Üye</th>
        <th>Personel</th>
        <th>Alış Tarihi</th>
        <th>İade Tarihi</th>
        <th>İade Et</th>
    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.TblKitap.AD</td>
            <td>@x.TblUyeler.AD&nbsp; @x.TblUyeler.SOYAD</td>
            <td>@x.TblPersonel.PERSONEL</td>
            <td>@Convert.ToDateTime(x.ALISTARIH).ToString("dd/MM/yyyy")</td>
            <td>@Convert.ToDateTime(x.IADETARIH).ToString("dd/MM/yyyy")</td>
            <td><a href="/Odunc/OduncIade/@x.ID" class="btn btn-group" style="background-color: #ff6a00; color:white">Kitap İade Et</a></td>
        </tr>
    }
</table>

